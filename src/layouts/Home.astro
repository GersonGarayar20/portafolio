---
import Redes from "../components/Redes.astro";
---

<section id="home" class="w-full h-screen py-8 md:py-16 flex flex-col gap-12 justify-center">

  <h1 class="text-6xl font-semibold text-neutral-200">Gerson Garayar<br/>
    <span>Frontend Developer</span>
  </h1>
  
  <div class="flex flex-wrap gap-4 items-center">
    <Redes></Redes>
    <a title="Descargar CV" class="bg-white/40 hover:bg-red-500 cursor-pointer hover:text-white px-4 py-2 rounded-xl transition-all">Descargar CV</a>
  </div>

</section>

<style>

  h1{
    animation-name: inicio;
    animation-duration: 1s;
  }

  @keyframes inicio {

    from{
      opacity: 0;
      translate: -50px;
    }
    
  }

  span{
    animation: animate 10s linear infinite;
  }

  @keyframes animate {
  0% {
    @apply
    text-cyan-400
  }
  50%{
    @apply
    text-teal-400
  }
  100% {
    @apply
    text-cyan-400
  }
}

</style>
